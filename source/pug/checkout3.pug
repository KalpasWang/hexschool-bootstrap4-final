extends include/layout.pug

block vars
  - var title = '訂單資訊確認'

block content
  main.mb-0.mb-md-6
    .container.px-0.px-md-2
      .row.justify-content-center
        .col-md-6.pr-0.pr-sm-2
          .bg-primary.text-secondary.px-1.px-sm-5.py-5
            .container-fluid
              .form-row.mb-5
                .col-6
                  h2 訂單資訊確認
                .col-6
                  ul.progress-steps
                    li.step.completed 
                    li.step.completed
                    li.step.active
              .form-row.form-group
                label.col-2(for="credit-card") 卡號
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="text" id="credit-card" value="1234 5678 9012 6543" readonly)
                label.col-2(for="card-name") 持卡人
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="text" id="card-name" value="Wei Hang Wang" readonly)
                label.col-2(for="date") 到期日
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="text" id="date" value="12/26" readonly)
                label.col-2(for="code") 安全碼
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="number" id="code" value="123" readonly)
              .form-row.form-group
                label.col-2(for="name") 名字
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="text" id="name" value="王小明")
                label.col-2(for="address") 地址
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="text" value="高雄市新興區幸福路 520 號" readonly)
                label.col-2(for="tel") 電話
                .col-10
                  input.form-control.form-control-sm.bg-secondary.border-0(type="tel" id="tel" value="0912-345-678")

          a(href="success.html").btn.btn-lg.btn-block.btn-accent.text-primary.pt-4.pb-3 確認
        .col-lg-3.col-md-5.d-none.d-md-block
          .border.border-secondary.text-accessory.mb-4
            h2.text-lg.text-bold.text-center.py-3.bg-secondary 訂單摘要
            .px-4.py-3
              .d-flex.justify-content-between
                span 小計
                span NT$ 2,700
              .d-flex.justify-content-between
                span 運費
                span NT$ 300
              .d-flex.justify-content-between.text-md.text-bold.mt-3
                span 總計
                span NT$ 3,000
          .border.border-secondary.text-accessory
            h2.text-lg.text-bold.text-center.py-3.bg-secondary 購物清單
